.head-container{
  position: fixed;
  top: 0;
  box-shadow: 0px 2px 8px gainsboro;
  background-color: white;
  width: 100%;
  height: 250rpx;
  overflow-y:auto;
  padding-bottom: 10rpx;
  z-index: 9999
}

.box-text{
  font-size: 25rpx;
  margin-left: 20rpx;
  position: relative;
  bottom: 30rpx;
}
.box-input{
  border: 1px solid black;
  display: inline-block;
  width: 160rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 25rpx;
  margin: 10rpx;
}

.box-input-search{
  border: 1px solid black;
  height: 60rpx;
  line-height: 60rpx;
  width: 500rpx;
  margin: 1rpx auto;
}
.search{
  font-size: 25rpx;
  text-align: center;
}

input:hover{
   border: 1px solid rgb(40, 28, 201);
}




.updata-bd{
  border: 1px solid white;
  padding-top: 260rpx;
  margin: 10rpx 0rpx;
}
.body-container{
   box-shadow: 0px 2px 8px rgb(148, 148, 148);
   margin-bottom: 15rpx;
}
.body-title{
  font-size: 26rpx;
  line-height: 45rpx;
  margin-left: 20rpx;
}
.body-line{
  margin: 20rpx 0rpx;
  border-bottom: 1px solid blue;
}

.body-remove {
  margin: 0rpx auto;
  text-align: center;
}
.body-remove button{
  margin: 20rpx 50rpx;
}
.body-btn{
  margin: 60rpx 5rpx 50rpx;
}