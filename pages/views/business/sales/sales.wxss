  color: white;
  background-color: rgb(64, 64, 240)
}

.primary{
  color: white;
  background-color: rgb(146, 243, 146)
}

.gray{
  color: white;
  background-color: rgb(218, 216, 216);
}

.red{
  color: white;
  background-color: red;
}