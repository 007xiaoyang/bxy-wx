.weui-layer-mask {
  position: fixed;
  z-index: 1000;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
}

.weui-mask_transparent {
  position: fixed;
  z-index: 1000;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
}

.weui-layer__wrp {
  position: fixed;
  z-index: 5000;
  left: 0;
  right: 0;
  text-align: center;
  font-size: 0;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  align-items: center;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
  justify-content: center;
}
.layer-top{
  top: 0;
}
.layer-bottom{
  bottom: 0;
}

.weui-layer {
  background-color: #fff;
  text-align: center;
  overflow: hidden;
  width: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-flex-direction: column;
  flex-direction: column;
  max-height: 90%;
}

.weui-layer__hd {
  padding: 32px 24px 16px;
}

.weui-layer__title {
  font-weight: 700;
  font-size: 17px;
  line-height: 1.4;
}

.weui-layer__bd {
  flex: 1;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
  padding: 0 14px;
  margin-bottom: 1px;
  min-height: 10px;
  font-size: 17px;
  line-height: 1.4;
  overflow-wrap: break-word;
  -webkit-hyphens: auto;
  hyphens: auto;
  color: rgba(0, 0, 0, 0.5);
}

.weui-layer__bd:first-child {
  padding: 2px 24px 0;
  font-weight: 700;
  color: rgba(0, 0, 0, 0.9);
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-flex-direction: column;
  flex-direction: column;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
  justify-content: center;
}

/*top按钮边框样式  */
.weui-layer__top-btn {
  position: relative;
  line-height: 40px;
  min-height: 40px;
  font-size: 17px;
  display: flex;
  background-color: white;
  border-bottom: 1rpx solid rgba(214, 37, 61, 0.1);
}

.weui-layer__top-btn:after {
  content: " ";
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  height: 1px;
  color: rgba(0, 0, 0, 0.1);
}
/*bottom按钮边框样式  */
.weui-layer__bottom-btn {
  position: relative;
  line-height: 40px;
  min-height: 40px;
  font-size: 17px;
  display: flex;
  border-top: 1rpx solid rgba(0, 0, 0, 0.1);
}

.weui-layer__bottom-btn:after {
  content: " ";
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  height: 1px;
  color: rgba(0, 0, 0, 0.1);
}









.weui-layer__btn {
  display: block;
  flex: 1;
  color: #576b95;
  font-weight: 700;
  text-decoration: none;
  -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
  position: relative;
}

.weui-layer__btn:active {
  background-color: #ececec;
}

.weui-layer__btn:after {
  content: " ";
  position: absolute;
  left: 0;
  top: 0;
  width: 1px;
  bottom: 0;
  border-left: 1rpx solid rgba(0, 0, 0, 0.1);
  color: rgba(0, 0, 0, 0.1);
}

.weui-layer__btn:first-child:after {
  display: none;
}

.weui-layer__btn_default {
  color: rgba(0, 0, 0, 0.9);
}

@media screen and (min-width:352px) {
  .weui-dialog {
    width: 320px;
    margin: 0 auto;
  }
}

.weui-layer.weui-dialog_hidden {
  opacity: 0;
  transform: scale3d(1, 1, 0);
}

.weui-layer {
  opacity: 1;
  -webkit-transform: scale3d(1, 1, 1);
  transform: scale3d(1, 1, 1);
  transition: all 0.3s ease-in;
}

.weui-layer-mask.weui-layer-mask_hidden {
  opacity: 0;
  transform: scale3d(1, 1, 0);
}

.weui-layer-mask {
  opacity: 1;
  transform: scale3d(1, 1, 1);
  transition: all 0.3s ease-in;
}
